{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    'config:recommended',
    'docker:enableMajor',
    'replacements:k8s-registry-move',
    ':automergeBranch',
    ':disableRateLimiting',
    ':dependencyDashboard',
    ':semanticCommits',
    ':skipStatusChecks',
    ':timezone(America/New_York)',
  ],

  packageRules: [
    {
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchCurrentVersion: '!/^0/',
      automerge: true,
    },
  ],
}
